    <![endif]-->

    <style>
        input {
            border: 0;
            outline: none;
        }

            input[type='text'], input[type='password'] {
                width: 40%;
                height: 100%;
                border: 1px solid #CCCCCC;
                outline: none;
                border-radius: 3px;
            }


        .page_con {
            width: 100%;
            height: auto;
            float: left;
        }

            .page_con .list_ul {
                width: 100%;
                height: auto;
                float: left;
            }
                 .page_con .list_ul100 li {
                    width: 100%;
                    height: 24px;
                    line-height: 24px;
                    float: left;
                    margin-top: 10px;
                }
                .page_con .list_ul li {
                    width: 50%;
                    height: 24px;
                    line-height: 24px;
                    float: left;
                    margin-top: 10px;
                }

                    .page_con .list_ul li span {
                        display: inline-block;
                    }

                        .page_con .list_ul li span.li_tit {
                            width: 22%;
                            height: 100%;
                            float: left;
                        }

                        .page_con .list_ul li span.li_con {
                            width: 75%;
                            float: left;
                            height: 100%;
                        }

                /*.page_con .list_ul li span.li_con .input01 {
                                width: 65%;
                                height: 100%;
                                border: 1px solid #CCCCCC;
                                outline: none;
                                border-radius: 3px;
                            }*/

                /*有textarea的li的样式*/
                .page_con .list_ul .li_con_txt {
                    width: 50%;
                    min-height: 100px;
                }

                    .page_con .list_ul .li_con_txt .li_tit1 {
                        width: 14%;
                    }

        textarea {
            width: 90%;
            height: 100%;
            border-color: #CCCCCC;
            border-radius: 3px;
            resize: none;
        }

        .alert_input {
            color: #ffffff;
            width: 100px;
            height: 34px;
            margin: 30px 30px 0 0;
            line-height: 34px;
            text-align: center;
            border-radius: 5px;
            border: 0;
            outline: none;
            cursor: pointer;
        }

        .input_save {
            background: #418bca;
        }

        .input_close {
            background: #ec407a;
        }

        .field-validation-error {
            position: relative;
        }
    </style>
</head>

<body>
    <article class="page-container">

        @RenderBody()


    </article>

</body>

</html>

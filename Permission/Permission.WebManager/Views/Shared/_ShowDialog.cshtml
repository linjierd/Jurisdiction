    <![endif]-->
    @{
        <script src="~/Content/lib/jquery/jquery.min.js"></script>
        <script src="~/Content/static/h-ui/js/H-ui.min.js"></script>
        <script src="~/Content/static/h-ui.admin/js/H-ui.admin.js"></script>
        <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui/css/H-ui.min.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/H-ui.admin.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/skin/default/skin.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/static/h-ui.admin/css/style.css" />
        if (Html.ViewContext.ClientValidationEnabled)
        {
            <script src="~/Content/lib/jquery.validation/1.15.0/jquery.validate.min.js"></script>
            <script src="~/Content/lib/jquery.validation/1.15.0/jquery.validate.unobtrusive.min.js"></script>
